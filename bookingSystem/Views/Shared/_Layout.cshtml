<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bookingSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bookingSystem.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>

@if (User.Identity?.IsAuthenticated == true)
{
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">bookingSystem</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                asp-controller="Bookings"
                                asp-action="Create">
                                    Create Booking
                                </a>
                            </li>
                        }
                    </ul>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-flex"> @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
}

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - bookingSystem
        </div>
    </footer>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
